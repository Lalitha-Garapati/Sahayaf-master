<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/donar_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Donar : "
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/donar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/donar_name_text"
                android:text=" Name"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/book_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donar_name_text"
                android:paddingLeft="5dp"
                android:text="Book Name :"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/donar_name"
                android:layout_toRightOf="@+id/book_name_text"
                android:paddingLeft="5dp"
                android:text="name"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_name_text"
                android:paddingLeft="5dp"
                android:text="Address : "
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/address_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/book_name"
                android:layout_toRightOf="@+id/address_text"
                android:text="Loacation"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/contact_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_location"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:text="Contact : "
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/address_location"
                android:layout_toRightOf="@+id/contact_number_text"
                android:text="ContactNo"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@mipmap/ic_launcher_phone"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/address_location" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/contact_number_text" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"></LinearLayout>

    </LinearLayout>

</RelativeLayout>